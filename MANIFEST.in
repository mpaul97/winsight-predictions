# Include Python source files and package metadata
include README.md
include pyproject.toml
recursive-include winsight_predictions *.py

# Include only model metrics (exclude all training data CSVs)
include winsight_predictions/nfl/games/models/*.json
include winsight_predictions/nfl/players/models/**/*.json
include winsight_predictions/nfl/outcomes/models/*.json

# Exclude everything else
recursive-exclude winsight_predictions *.csv
recursive-exclude winsight_predictions *.ipynb
prune winsight_predictions/nfl/games/features
prune winsight_predictions/nfl/games/game_predictions
prune winsight_predictions/nfl/games/predicted_features
prune winsight_predictions/nfl/players/features
prune winsight_predictions/nfl/players/player_predictions
prune winsight_predictions/nfl/players/predicted_features
prune winsight_predictions/nfl/players/train
prune tests
prune .vscode
prune .pytest_cache
global-exclude __pycache__
global-exclude *.py[co]
